<resources>
    <!-- Base application theme. -->
    <style name="Theme.Magicpark" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#AD061C</item>
        <item name="colorPrimaryDark">#AD061C</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="InputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">11sp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/mp__color_background_transparent</item>
        <item name="android:textColor">@color/mp__color_text_black</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="ErrorTextAppearance">
        <item name="android:textSize">0sp</item>
    </style>


    <style name="SocialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">11sp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/mp__color_background_white</item>
        <item name="android:textColor">@color/mp__color_text_black</item>
    </style>

    <style name="FacebookButton" parent="SocialButton">
        <item name="backgroundTint">#3b5998</item>
        <item name="android:textColor">@color/mp__color_text_white</item>
    </style>

    <style name="GoogleButton" parent="SocialButton">
        <item name="backgroundTint">@color/mp__color_background_white</item>
        <item name="android:textColor">@color/mp__color_text_black</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/mp__color_background_red</item>
        <item name="android:textColor">@color/mp__color_text_white</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <style name="ButtonReverse" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/mp__color_background_white</item>
        <item name="android:textColor">@color/mp__color_text_red</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <style name="ButtonTransparent"  parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:fillColor">@color/mp__color_background_transparent</item>
        <item name="textAllCaps">false</item>
        <item name="background">@color/mp__color_background_transparent</item>
        <item name="backgroundTint">@color/mp__color_background_transparent</item>
        <item name="android:textColor">@color/mp__color_text_black</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>


    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.Magicpark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Magicpark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Magicpark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShopCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>